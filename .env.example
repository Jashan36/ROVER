# ============================================
# Mars Rover AI - Environment Configuration
# ============================================

# NASA API Configuration
# Get your free API key at: https://api.nasa.gov/
NASA_API_KEY=your_nasa_api_key_here
NASA_API_BASE_URL=https://api.nasa.gov/mars-photos/api/v1
NASA_API_RATE_LIMIT=1000

# ROS2 Configuration
ROS_DOMAIN_ID=0
ROS_LOCALHOST_ONLY=0
ROS_DISTRO=humble

# AI Model Configuration
AI_MODEL_DEVICE=cpu  # or "cuda" for GPU acceleration
AI_MODEL_PRECISION=fp32  # or "fp16" for faster inference
AI_CONFIDENCE_THRESHOLD=0.7
AI_MAX_HAZARDS=10

# Simulation Parameters
GAZEBO_WORLD=mars_terrain
SIMULATION_SPEED=1.0
MARS_GRAVITY=3.71

# Dashboard Configuration
DASHBOARD_PORT=8501
DASHBOARD_HOST=0.0.0.0
DASHBOARD_THEME=dark
DASHBOARD_UPDATE_RATE=5.0

# Data Storage Paths
DATA_RAW_PATH=./data/raw
DATA_PROCESSED_PATH=./data/processed
MODEL_CACHE_PATH=./data/cache/model_cache
LOG_PATH=./logs

# Performance Tuning
INFERENCE_RATE=5.0
CAMERA_FPS=10.0
NAVIGATION_RATE=20.0
BUFFER_SIZE=5

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FORMAT=json
ENABLE_PERF_LOGGING=true

# Development Flags
DEBUG_MODE=false
ENABLE_METRICS=true
ENABLE_TELEMETRY=true
ENABLE_CRASH_REPORTS=false

# External Services (Optional)
# MAPBOX_ACCESS_TOKEN=your_mapbox_token
# SENTRY_DSN=your_sentry_dsn
# PROMETHEUS_PORT=9090

# ============================================
# Example Usage:
# 1. Copy this file to .env
# 2. Fill in your actual values
# 3. The system will load these automatically
#
# Important: Never commit .env to version control!
# ============================================